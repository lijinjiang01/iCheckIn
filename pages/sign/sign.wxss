page{
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;  
  text-align: center；
}

.container {
  background: rgb(65, 120, 246);
  width: 100%;
  height: 100%;

  display: flex;
  align-items: center;
  justify-content: center;  
  text-align: center；
}

.circleArea {
  z-index: 1;
  align-items: center;
  justify-content: center;  
  text-align: center；
}

.circle {
  background-color: rgb(120, 180, 249);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: circle-animation 2s ease-in-out infinite;
}

.circle1 {
  width: 330rpx;
  height: 330rpx;
  background: rgb(76, 136, 246);
}

.circle2 {
  width: 260rpx;
  height: 260rpx;
  background: rgb(95, 156, 248);
}

.circle3 {
  width: 200rpx;
  height: 200rpx;
  background: rgb(120, 180, 249);
}

@keyframes circle-animation {
  0% {
    transform: translate(-50%, -50%) scale(1);
  }

  50% {
    transform: translate(-50%, -50%) scale(1.2);
  }

  100% {
    transform: translate(-50%, -50%) scale(1);
  }
}

.imageArea {
  display: flex;
  z-index: 2;
}

.bluetoothImg {
  height: 50rpx;
  width: 50rpx;
  background-size: 100% 100%;/* 使背景图自动缩放适应大小 */
  background-image: url('data:image/svg+xml;base64,');
}

.infoArea {
  position: absolute;
  top: 80%;
}

.promptInfo {
  color: white;
  overflow: hidden;
  /* 隐藏超出部分 */
  white-space: nowrap;
  /* 不换行 */
  animation: text-animation ease-out 2s infinite;
  /* 动画名称、时长、循环次数 */
}

@keyframes text-animation {
  0% {
    width: 0;
    /* 初始宽度为0 */
  }

  100% {
    width: 100%;
    /* 最终宽度为100% */
  }
}